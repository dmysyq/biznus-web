
@{
    Layout = "_BaseLayout";
}

@section Scripts {
    <script src="~/js/jquery.js" type="text/javascript"></script>
    <script src="~/js/webflow-script.js" type="text/javascript"></script>
    <script>
        $('#CultureList').on('change', function () {
            $.ajax({
                url: '/home/Cookie',
                data: { culture: $(this).val() },
                dataType: 'json',
                type: 'POST',
                success: function (response) {
                    location.reload();
                },
                error: function (xhr, status, error) {
                }
            });
        });
    </script>
}

<style>
	.nav-actions {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.user-menu {
		position: relative;
		display: flex;
		align-items: center;
	}

	.user-greeting {
		color: #333;
		font-weight: 500;
		margin-right: 0.5rem;
	}

	.user-dropdown {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.user-link {
		color: #4ecdc4;
		text-decoration: none;
		font-size: 0.9rem;
		padding: 0.25rem 0;
		transition: color 0.3s;
	}

		.user-link:hover {
			color: #45b7aa;
			text-decoration: underline;
		}

	.logout-btn {
		background: none;
		border: none;
		color: #4ecdc4;
		text-decoration: none;
		font-size: 0.9rem;
		padding: 0.25rem 0;
		cursor: pointer;
		transition: color 0.3s;
	}

		.logout-btn:hover {
			color: #45b7aa;
			text-decoration: underline;
		}

	.auth-links {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.auth-link {
		color: #333;
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s;
	}

		.auth-link:hover {
			color: #4ecdc4;
		}

	.btn.small {
		padding: 8px 16px;
		font-size: 0.9rem;
	}

	@@media (max-width: 768px) {
		.nav-actions {
			flex-direction: column;
			gap: 0.5rem;
		}

		.auth-links {
			flex-direction: column;
			gap: 0.5rem;
		}
	}
</style>