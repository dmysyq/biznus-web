

<!DOCTYPE html>
<html data-wf-page="5e7ff3ec0c4ef46264fa99e4" data-wf-site="5e7ff3ec0c4ef4c974fa99e3" data-wf-status="1">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Biznus Template</title>
	<meta content="The Biznus Template is focused on helping small and medium-sized businesses move their retail shop online. Get your retail delivery business started with Webflow today." name="description" />
	<meta content="@ViewData["Title"] - Biznus Template" property="og:title" />
	<meta content="The Biznus Template is focused on helping small and medium-sized businesses move their retail shop online. Get your retail delivery business started with Webflow today." property="og:description" />
	<meta content="images/open-20graph-20-20red-20-20home.jpg" property="og:image" />
	<meta content="@ViewData["Title"] - Biznus Template" property="twitter:title" />
	<meta content="The Biznus Template is focused on helping small and medium-sized businesses move their retail shop online. Get your retail delivery business started with Webflow today." property="twitter:description" />
	<meta content="images/open-20graph-20-20red-20-20home.jpg" property="twitter:image" />
	<meta property="og:type" content="website" />
	<meta content="summary_large_image" name="twitter:card" />
	<meta content="Webflow" name="generator" />
	<link href="~/css/webflow-style.css" rel="stylesheet" type="text/css" />
	<link href="https://fonts.googleapis.com" rel="preconnect" />
	<link href="https://fonts.gstatic.com" rel="preconnect" crossorigin="anonymous" />
	<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js" type="text/javascript"></script>
	<script type="text/javascript">
		WebFont.load({
			google: {
				families: ["Sen:regular,700,800"]
			}
		});
	</script>
	<script type="text/javascript">
		!function(o,c){var n=c.documentElement,t=" w-mod-";n.className+=t+"js",("ontouchstart"in o||o.DocumentTouch&&c instanceof DocumentTouch)&&(n.className+=t+"touch")}(window,document);
	</script>
	<link href="~/images/favicon.png" rel="shortcut icon" type="image/x-icon" />
	<link href="~/images/app-icon.png" rel="apple-touch-icon" />
	<script type="text/javascript">
		window.__WEBFLOW_CURRENCY_SETTINGS = {
			"currencyCode":"USD",
			"$init":true,
			"symbol":"$",
			"decimal":".",
			"fractionDigits":2,
			"group":",",
			"template":"{{wf {\"path\":\"symbol\",\"type\":\"PlainText\"} }} {{wf {\"path\":\"amount\",\"type\":\"CommercePrice\"} }} {{wf {\"path\":\"currencyCode\",\"type\":\"PlainText\"} }}",
			"hideDecimalForWholeNumbers":false
		};
	</script>
</head>
<body>
	<div class="menu-wrapper">
		<!-- Баннер уведомлений -->
		<div class="w-dyn-list">
			<div role="list" class="w-dyn-items">
				<div role="listitem" class="w-dyn-item">
					<a href="/alert/how-were-responding-to-covid-19" class="banner w-inline-block">
						<div class="container">
							<div class="banner-content-wrapper">
								<div class="pill primary alert-bar">Announcement</div>
								<div>How we're responding to COVID-19</div>
							</div>
						</div>
					</a>
				</div>
			</div>
		</div>

		<!-- Навигационная панель -->
		<div data-collapse="medium" data-animation="over-right" data-duration="400" data-easing="ease" data-easing2="ease" role="banner" class="navbar w-nav">
			<div class="container">
				<div class="nav-wrapper">
					<a href="/" class="brand w-nav-brand @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "w--current" : "")">
						<img src="~/images/logo.svg" alt="Acme Outdoors Logo" />
					</a>
					<div class="cart-nav-wrapper">
						<nav role="navigation" class="nav-menu w-nav-menu">
							<a href="/" class="nav-link w-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "w--current" : "")">Home</a>
							<a href="/About" class="nav-link w-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "About" ? "w--current" : "")">About</a>
							<a href="/Shop" class="nav-link w-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Shop" ? "w--current" : "")">Shop</a>
							<a href="/Donations" class="nav-link w-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Donations" ? "w--current" : "")">Donate</a>
							<a href="/Contact" class="nav-link w-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? "w--current" : "")">Contact</a>
						</nav>
						<!-- Переключатель языков -->
						@Html.Partial("_lang")


							<!-- Секция авторизации -->
							@if (User.Identity?.IsAuthenticated == true)
							{
								<div class="user-menu">
									<span class="user-greeting">Hello, @User.FindFirst("FirstName")?.Value!</span>
									<div class="user-dropdown">
										<a href="@Url.Action("Profile", "Account")" class="user-link">My Profile</a>
										<form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
											<button type="submit" class="user-link logout-btn">Sign Out</button>
										</form>
									</div>
								</div>
							}
							else
							{
								<div class="auth-links">
									<a href="@Url.Action("Login", "Account")" class="nav-link auth-link">Sign In</a>
								</div>
							}

							<!-- Корзина покупок -->
							<div data-node-type="commerce-cart-wrapper" data-open-product="" data-wf-cart-type="rightSidebar" class="w-commerce-commercecartwrapper cart-menu">
								<a href="#" data-node-type="commerce-cart-open-link" class="w-commerce-commercecartopenlink cart w-inline-block" role="button" aria-haspopup="dialog" aria-label="Open cart">
									<img src="~/images/cart.svg" alt="" class="cart-icon" />
									<div class="w-commerce-commercecartopenlinkcount cart-quantity-cart">0</div>
								</a>
								<!-- Корзина будет реализована позже -->
							</div>
						</div>
					</div>
					<div class="nav-button w-nav-button">
						<div class="w-icon-nav-menu"></div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Основной контент -->
	<main>
		@RenderBody()
	</main>

	<!-- Подвал -->
	<div class="footer">
		<div class="container">
			<div class="footer-wrapper">
				<div class="footer-logo-column">
					<a href="/" class="w-inline-block @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "w--current" : "")">
						<img src="~/images/logo.svg" alt="Acme Outdoors Logo" />
					</a>
				</div>
				<div>
					<a href="https://twitter.com/webflow" target="_blank" class="social-footer-link w-inline-block">
						<img src="~/images/twitter_social_icon_rounded_square_white.svg" width="30" alt="Twitter Logo" />
					</a>
					<a href="https://www.facebook.com/webflow" class="social-footer-link w-inline-block">
						<img src="~/images/facebook-20logo.svg" width="30" alt="Facebook Logo" />
					</a>
					<a href="https://www.instagram.com/webflow/" target="_blank" class="social-footer-link w-inline-block">
						<img src="~/images/insta.svg" width="30" alt="Instagram Logo" />
					</a>
				</div>
			</div>
			<div class="footer-bottom-wrapper">
				<div class="small footer-small">Made In <a href="https://webflow.com" target="_blank">Webflow</a>. © 2020.</div>
			</div>
		</div>
	</div>

	<!-- Скрипты -->
	<script src="~/js/jquery.js" type="text/javascript"></script>
	<script src="~/js/webflow-script.js" type="text/javascript"></script>
	<script>
				$('#CultureList').on('change', function () {
			 $.ajax({
				 url: '/home/Cookie',
				 data: { culture: $(this).val() },
				 dataType: 'json',
				 type: 'POST',
				 success: function (response) {
					 location.reload();
				 },
				 error: function (xhr, status, error) {
				 }
			 });
		});
	</script>
</body>
</html>

<style>
	.nav-actions {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.user-menu {
		position: relative;
		display: flex;
		align-items: center;
	}

	.user-greeting {
		color: #333;
		font-weight: 500;
		margin-right: 0.5rem;
	}

	.user-dropdown {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.user-link {
		color: #4ecdc4;
		text-decoration: none;
		font-size: 0.9rem;
		padding: 0.25rem 0;
		transition: color 0.3s;
	}

		.user-link:hover {
			color: #45b7aa;
			text-decoration: underline;
		}

	.logout-btn {
		background: none;
		border: none;
		color: #4ecdc4;
		text-decoration: none;
		font-size: 0.9rem;
		padding: 0.25rem 0;
		cursor: pointer;
		transition: color 0.3s;
	}

		.logout-btn:hover {
			color: #45b7aa;
			text-decoration: underline;
		}

	.auth-links {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.auth-link {
		color: #333;
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s;
	}

		.auth-link:hover {
			color: #4ecdc4;
		}

	.btn.small {
		padding: 8px 16px;
		font-size: 0.9rem;
	}

	@@media (max-width: 768px) {
		.nav-actions {
			flex-direction: column;
			gap: 0.5rem;
		}

		.auth-links {
			flex-direction: column;
			gap: 0.5rem;
		}
	}
</style>