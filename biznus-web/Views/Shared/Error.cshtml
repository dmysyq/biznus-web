@model ErrorViewModel
@{
    ViewData["Title"] = "Ошибка";
}

<section class="error-section">
    <div class="container">
        <div class="error-content">
            <h1>Упс! Что-то пошло не так</h1>
            <p class="error-message">Произошла ошибка при обработке вашего запроса.</p>
            
            @if (Model.ShowRequestId)
            {
                <p class="request-id">ID запроса: <code>@Model.RequestId</code></p>
            }
            
            <div class="error-actions">
                <a href="/" class="home-button">Вернуться на главную</a>
                <a href="javascript:history.back()" class="back-button">Назад</a>
            </div>
            
            <div class="error-help">
                <h3>Что можно сделать:</h3>
                <ul>
                    <li>Проверьте правильность URL</li>
                    <li>Обновите страницу</li>
                    <li>Попробуйте позже</li>
                    <li>Свяжитесь с нами, если проблема повторяется</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<style>
    .error-section {
        padding: 80px 0;
        min-height: 60vh;
        display: flex;
        align-items: center;
    }

    .error-content {
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
    }

    .error-content h1 {
        font-size: 3rem;
        color: #ff6b6b;
        margin-bottom: 1rem;
    }

    .error-message {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 2rem;
    }

    .request-id {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 2rem;
        font-family: monospace;
        color: #333;
    }

    .error-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 3rem;
    }

    .home-button,
    .back-button {
        padding: 15px 30px;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: all 0.3s;
    }

    .home-button {
        background: #667eea;
        color: white;
    }

    .home-button:hover {
        background: #5a6fd8;
    }

    .back-button {
        background: #f8f9fa;
        color: #333;
        border: 2px solid #e1e5e9;
    }

    .back-button:hover {
        background: #e9ecef;
    }

    .error-help {
        text-align: left;
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 10px;
        border-left: 4px solid #667eea;
    }

    .error-help h3 {
        color: #333;
        margin-bottom: 1rem;
    }

    .error-help ul {
        list-style: none;
        padding: 0;
    }

    .error-help li {
        padding: 0.5rem 0;
        position: relative;
        padding-left: 1.5rem;
        color: #666;
    }

    .error-help li:before {
        content: "•";
        position: absolute;
        left: 0;
        color: #667eea;
        font-weight: bold;
    }

    @@media (max-width: 768px) {
        .error-actions {
            flex-direction: column;
            align-items: center;
        }
        
        .home-button,
        .back-button {
            width: 200px;
        }
    }
</style>
