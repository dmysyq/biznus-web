@{
    ViewData["Title"] = "Profile";
}

<!-- Секция профиля -->
<div class="content-section">
    <div class="container">
        <div class="profile-wrapper">
            <div class="profile-content">
                <h1 class="profile-title">My Profile</h1>
                
                <div class="profile-info">
                    <div class="profile-avatar">
                        <div class="avatar-circle">
                            @{
                                var firstName = User.FindFirst("FirstName")?.Value ?? "U";
                                var lastName = User.FindFirst("LastName")?.Value ?? "U";
                                var initials = $"{firstName[0]}{lastName[0]}";
                            }
                            @initials
                        </div>
                    </div>
                    
                    <div class="profile-details">
                        <h2>@User.Identity?.Name</h2>
                        <p class="profile-email">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</p>
                        <p class="profile-member-since">Member since: @DateTime.Now.ToString("MMMM yyyy")</p>
                    </div>
                </div>

                <div class="profile-actions">
                    <a href="@Url.Action("Index", "Home")" class="btn w-button">Back to Home</a>
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                        <button type="submit" class="btn outline w-button">Sign Out</button>
                    </form>
                </div>

                <div class="profile-stats">
                    <div class="stat-item">
                        <h3>Orders</h3>
                        <p>0</p>
                    </div>
                    <div class="stat-item">
                        <h3>Wishlist</h3>
                        <p>0</p>
                    </div>
                    <div class="stat-item">
                        <h3>Reviews</h3>
                        <p>0</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
        padding: 2rem 0;
    }

    .profile-content {
        background: white;
        padding: 3rem;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        text-align: center;
    }

    .profile-title {
        color: #333;
        font-size: 2rem;
        margin-bottom: 2rem;
    }

    .profile-info {
        margin-bottom: 2rem;
    }

    .profile-avatar {
        margin-bottom: 1rem;
    }

    .avatar-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: #4ecdc4;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0 auto;
    }

    .profile-details h2 {
        color: #333;
        margin-bottom: 0.5rem;
    }

    .profile-email {
        color: #666;
        margin-bottom: 0.5rem;
    }

    .profile-member-since {
        color: #999;
        font-size: 0.9rem;
    }

    .profile-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .btn.outline {
        background: transparent;
        border: 2px solid #4ecdc4;
        color: #4ecdc4;
    }

    .btn.outline:hover {
        background: #4ecdc4;
        color: white;
    }

    .profile-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        border-top: 1px solid #e1e5e9;
        padding-top: 2rem;
    }

    .stat-item h3 {
        color: #333;
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .stat-item p {
        color: #4ecdc4;
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .profile-content {
            padding: 2rem;
            margin: 1rem;
        }

        .profile-actions {
            flex-direction: column;
            align-items: center;
        }

        .profile-stats {
            grid-template-columns: 1fr;
        }
    }
</style>
