@{
    ViewData["Title"] = "Donations - Success";
}

<!-- Секция успеха -->
<div class="content-section">
    <div class="container">
        <div class="success-wrapper">
            <div class="success-content">
                <h1>Thank You for Your Donation!</h1>
                <div class="success-icon">
                    <img src="~/images/verified.svg" alt="Success Icon" />
                </div>
                <p class="success-message">@ViewBag.SuccessMessage</p>
                <div class="donation-amount">
                    <h2>Donation Amount: $@ViewBag.Amount.ToString("F2")</h2>
                </div>
                <div class="success-actions">
                    <a href="/" class="btn w-button">Return Home</a>
                    <a href="/Donations" class="btn outline w-button">Make Another Donation</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .success-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 400px;
    }

    .success-content {
        text-align: center;
        max-width: 500px;
    }

    .success-content h1 {
        color: #4ecdc4;
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .success-icon {
        margin: 2rem 0;
    }

    .success-icon img {
        width: 80px;
        height: 80px;
    }

    .success-message {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .donation-amount {
        margin: 2rem 0;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 10px;
        border: 2px solid #4ecdc4;
    }

    .donation-amount h2 {
        color: #4ecdc4;
        font-size: 1.8rem;
        margin: 0;
    }

    .success-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn.outline {
        background: transparent;
        border: 2px solid #4ecdc4;
        color: #4ecdc4;
    }

    .btn.outline:hover {
        background: #4ecdc4;
        color: white;
    }

    @@media (max-width: 768px) {
        .success-actions {
            flex-direction: column;
            align-items: center;
        }
    }
</style>
