@model DonationViewModel
@{
    ViewData["Title"] = "Donations";
}

<!-- Секция объяснения пожертвований -->
<div class="donate-explainer">
    <div class="container">
        <div class="donate-heading-1">Here at Acme Outdoors</div>
        <div class="donate-heading-2">every dollar counts</div>
        <p class="donate-paragraph">Acme Outdoors is more than just a company, we're a community of people who care for one another and for our city. During this time, due to shelter in place orders, only a select few of our staff are able to work. Any donations you make to Acme will help make sure our employees are cared for and can stay safe in these uncertain times.</p>
    </div>
</div>

<!-- Секция пожертвований -->
<div class="content-section">
    <div class="container">
        <div class="donate-wrapper">
            <!-- Быстрые кнопки пожертвований -->
            <div class="donate-collection w-dyn-list">
                <div role="list" class="w-dyn-items">
                    <div role="listitem" class="w-dyn-item">
                        <button type="button" class="donate-link-block w-inline-block" onclick="setDonationAmount(100)">
                            <div class="text-block">Donate $100</div>
                        </button>
                    </div>
                    <div role="listitem" class="w-dyn-item">
                        <button type="button" class="donate-link-block w-inline-block" onclick="setDonationAmount(50)">
                            <div class="text-block">Donate $50</div>
                        </button>
                    </div>
                    <div role="listitem" class="w-dyn-item">
                        <button type="button" class="donate-link-block w-inline-block" onclick="setDonationAmount(25)">
                            <div class="text-block">Donate $25</div>
                        </button>
                    </div>
                    <div role="listitem" class="w-dyn-item">
                        <button type="button" class="donate-link-block w-inline-block" onclick="setDonationAmount(15)">
                            <div class="text-block">Donate $15</div>
                        </button>
                    </div>
                    <div role="listitem" class="w-dyn-item">
                        <button type="button" class="donate-link-block w-inline-block" onclick="setDonationAmount(5)">
                            <div class="text-block">Donate $5</div>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Форма пожертвования -->
            <div class="donation-form-wrapper">
                <h3>Make a Custom Donation</h3>
                @using (Html.BeginForm("Index", "Donations", FormMethod.Post, new { @class = "donation-form" }))
                {
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Amount, "Donation Amount ($)", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Amount, new { @class = "input w-input", @type = "number", @step = "0.01", @min = "1", @max = "10000", @placeholder = "Enter amount" })
                        @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.DonorName, "Your Name (Optional)", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.DonorName, new { @class = "input w-input", @placeholder = "Enter your name", @maxlength = "100" })
                        @Html.ValidationMessageFor(m => m.DonorName, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.DonorEmail, "Email (Optional)", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.DonorEmail, new { @class = "input w-input", @type = "email", @placeholder = "Enter your email", @maxlength = "100" })
                        @Html.ValidationMessageFor(m => m.DonorEmail, "", new { @class = "text-danger" })
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Message, "Message (Optional)", new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.Message, new { @class = "input w-input", @placeholder = "Leave a message", @maxlength = "500", @rows = "3" })
                        @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                    </div>
                    
                    <input type="submit" class="btn w-button" value="Make Donation" />
                }
            </div>
        </div>
    </div>
</div>

<script>
    function setDonationAmount(amount) {
        document.querySelector('input[name="Amount"]').value = amount;
    }
</script>
